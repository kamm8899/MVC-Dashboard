<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2 class= "card">
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div class= "card-header">
      <label for="post-title">Post Title:</label>
      <input name="post-title" type="text" value="{{post.title}}" />
    </div>
    <div class = "card-header">
        <label for="post-content">Content:</label>
      <input class="textarea card-text" name="post-content" type="text" value="{{post.post_content}}" />
    </div>
    <div class="is-pulled-right">
       Posted on: {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="button btn-style">Save post</button>
    <button type="button" class="button btn-style">delete post</button>
  </form>
</article>
    

{{> comments post.comments}}


<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>