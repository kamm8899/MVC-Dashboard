<article class="form card">
  <div class="title card-header">
   <span><a href="/post{{id}}" class= "card-title" target="_blank">{{title}}</a></span> 
   <span style="float:right">Posted By {{user.username}} on {{format_date created_at}}</span>

  </div>

  <div class="card-body">
    <div class="card-text">
      {{post_content}} 
    </div> 
    <span><a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a></span>  
    </div>
</article>