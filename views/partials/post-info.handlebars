<article class="post card">
  <div class="title card-header">
    <a href="/post{{id}}" class= "post-title card-title" target="_blank">{{title}}</a>
  </div>

  <div class="card-body">
    <div class="card-text">
      {{post_content}}
    <b>{{user.username}}</b> | 
       {{format_date created_at}} | <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>
        
    </div>
</article>